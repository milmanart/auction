<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moje aukcje</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<%- include('../partials/header') %>
<div class="container">
    <% if (success_msg) { %>
        <div class="success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
        <div class="error"><%= error_msg %></div>
    <% } %>
    <h2>Moje aukcje</h2>
    <ul>
        <% items.forEach(function(item) { %>
            <li>
                <div>
                    <strong><%= item.title %></strong><br>
                    <%= item.description %><br>
                    Cena początkowa: <%= item.initialPrice %> PLN<br>
                    Obecna cena: <%= item.currentPrice %> PLN<br>
                    <% if (item.user) { %>
                        Sprzedawca: <%= item.user.username %><br>
                    <% } %>
                    <% if (item.buyer) { %>
                        Kupujący: <%= item.buyer.username %><br>
                    <% } %>
                </div>
                <div>
                    <% if (user && item.user && item.user._id && !item.user._id.equals(user._id)) { %>
                        <% if (!item.buyer || (item.buyer && !item.buyer.equals(user._id))) { %>
                            <% if (item.buyer) { %>
                                <form action="/items/buy/<%= item._id %>" method="POST" style="display:inline;">
                                    <input type="number" name="newPrice" min="<%= item.currentPrice + 1 %>" required>
                                    <button type="submit">Przebij cenę i kup</button>
                                </form>
                            <% } else { %>
                                <form action="/items/buy/<%= item._id %>" method="POST" style="display:inline;">
                                    <input type="hidden" name="newPrice" value="<%= item.currentPrice %>">
                                    <button type="submit">Kup za obecną cenę</button>
                                </form>
                            <% } %>
                        <% } %>
                    <% } %>
                    <% if (user && item.user && item.user._id && item.user._id.equals(user._id)) { %>
                        <form action="/items/delete/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit">Usuń</button>
                        </form>
                    <% } %>
                </div>
            </li>
        <% }); %>
    </ul>
</div>
</body>
</html>
